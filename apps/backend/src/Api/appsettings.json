{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=kcow.db"
  },
  "Jwt": {
    "Issuer": "kcow-api",
    "Audience": "kcow-frontend",
    "ExpirationMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "_comment": "Set JWT Key via environment variable (Jwt__Key) or dotnet user-secrets. Never commit the key to source control."
}
